#!/bin/bash --login

#SBATCH --time=00:30:00
#SBATCH --ntasks=1           
#SBATCH --cpus-per-task=10
#SBATCH --mem=16G   
#SBATCH --job-name  eestat2
#SBACTH -A shade-cole-bonito

cd ${SLURM_SUBMIT_DIR}
cores="$SLURM_CPUS_PER_TASK"
RAM="$SLURM_MEM_PER_NODE"
max_length=1600
min_length=1400

echo -e "\n==== Paths, variables, links ====\n"
echo -e "mkdir /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K"
mkdir /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K

cat /mnt/home/benucci/Amplicon-PacBio/labeled/mmprnt* > /mnt/home/benucci/Amplicon-PacBio/labeled/pooled.fastq 

echo -e "\n========= usearch, sort by length =========\n"
# resorting sequences untill the $length I want to trim at
/mnt/research/rdp/public/thirdParty/usearch11.0.667_i86linux64 \
	-sortbylength /mnt/home/benucci/Amplicon-PacBio/labeled/pooled.fastq \
	-maxseqlength $max_length \
	-fastqout /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/sorted.fastq

# trimming reads at $length
/mnt/research/rdp/public/thirdParty/usearch11.0.667_i86linux64 \
	-fastx_truncate /mnt/home/benucci/Amplicon-PacBio/labeled/pooled.fastq \
	-trunclen $max_length \
	-fastqout /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/truncated.fastq

# merging the results together
cat /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/sorted.fastq /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/truncated.fastq > /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/subset.fastq

# To filter read shorted than 1000 I can then use -minseqlength
/mnt/research/rdp/public/thirdParty/usearch11.0.667_i86linux64 \
	-sortbylength /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/subset.fastq \
	-minseqlength $min_length \
	-fastqout /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/exact.fastq

# Quick plot of read distribution
cat /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/exact.fastq | awk '{if(NR%4==2) print length($1)}' | sort -n | uniq -c > /mnt/home/benucci/Amplicon-PacBio/sortbyLength_1416K/readhisto.txt

conda activate R
Rscript /mnt/home/benucci/Amplicon-PacBio/pipeline/histo.R
conda deactivate

echo -e "\n====== Sbatch log ========\n"
scontrol show job $SLURM_JOB_ID 

cp /mnt/home/benucci/Amplicon-PacBio/pipeline/slurm* \
/mnt/home/benucci/Amplicon-PacBio/stats/sortbyLength_1416K.slurm
#rm /mnt/home/benucci/Amplicon-PacBio/pipeline/slurm*
